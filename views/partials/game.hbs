			<div id="gameInfo" data-rows="{{ rows }}" data-cols="{{ cols }}" data-minPlayers="{{ minPlayers }}" data-freezeTime="{{ freezeTime }}"></div>
			<button class="btn btn-primary" id="startGame">Start Game</button>
		{{/if}}
    </div>
</div>

<script type="text/javascript" src="/js/{{ js }}"></script>