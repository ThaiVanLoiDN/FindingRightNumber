<div class="row">
	<div class="row" style="margin-bottom : 10px;"></div>
    <div class="col-md-2">
    		<p><a href="/" class="btn btn-info btn-quite" style="">Quit Game</a></p>
        <ul class="list-group" id="sideScreenR">
		</ul>
    </div>
    <div class="col-md-8"  id="mainScreen" data-token="{{ token }}" data-user="{{ user }}" data-host="{{ isHost }}">
